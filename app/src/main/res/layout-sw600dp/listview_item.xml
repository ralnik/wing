<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgBG"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:src="@drawable/draw_level" />

    <LinearLayout
        android:id="@+id/row"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/item_selector"
        android:orientation="horizontal"
        android:padding="0dp">

        <TextView
            android:id="@+id/colKorpus"
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/colorTextListitems"
            android:textSize="14sp" />

        <FrameLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorBorderTable" />

        <TextView
            android:id="@+id/colFlat"
            android:layout_width="87dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="174"
            android:textColor="@color/colorTextListitems"
            android:textSize="14sp" />

        <FrameLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorBorderTable" />

        <TextView
            android:id="@+id/colFloor"
            android:layout_width="87dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="18"
            android:textColor="@color/colorTextListitems"
            android:textSize="14sp" />

        <FrameLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorBorderTable" />

        <TextView
            android:id="@+id/colRooms"
            android:layout_width="127dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/colorTextListitems"
            android:textSize="14sp" />

        <FrameLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorBorderTable" />

        <TextView
            android:id="@+id/colSquare"
            android:layout_width="127dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="123.8"
            android:textColor="@color/colorTextListitems"
            android:textSize="14sp" />

        <FrameLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorBorderTable" />

        <TextView
            android:id="@+id/colCost"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="1 568 000"
            android:textColor="@color/colorTextListitems"
            android:textSize="14sp" />

        <FrameLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorBorderTable" />

        <TextView
            android:id="@+id/colStatus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/colorTextListitems"
            android:textSize="14sp" />

        <FrameLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorBorderTable">

        </FrameLayout>

    </LinearLayout>

</FrameLayout>