<?xml version="1.0" encoding="utf-8" ?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:height="7dp" android:gravity="center_vertical" >
<shape xmlns:android="http://schemas.android.com/apk/res/android"   android:shape="rectangle"  >
    <corners android:radius="10dp" />
    <solid android:color="@color/seekbar_highlight_progress_color" />
</shape>
    </item>

    <item android:height="3dp" android:gravity="center_vertical" android:start="2dp" android:end="2dp" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android"   android:shape="rectangle" >
            <corners android:radius="10dp" />
            <solid android:color="@color/colorWhite" />
        </shape>
    </item>

    <item android:id="@android:id/progress" android:height="7dp" android:gravity="center" >
        <clip>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"   android:shape="rectangle">
            <corners android:radius="10dp" />
            <solid android:color="@color/seekbar_highlight_progress_color"/>
        </shape>
        </clip>
    </item>
</layer-list>